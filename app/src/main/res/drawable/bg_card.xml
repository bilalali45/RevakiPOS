<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="#f0f0f0"
        android:centerColor="#f7f7f7"
        android:endColor="#fdfdfd"
        android:angle="90"/>

    <stroke
        android:width="1dp"
        android:color="#B1BCBE"></stroke>

    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"></padding>

    <corners android:radius="5dp"></corners>
</shape>
